<Window x:Class="TeacherEduTest.Authentication.AuthenticationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Teacher Authentication" Height="175" Width="300" MaxHeight="175" MaxWidth="300">
    
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0">Email</TextBlock>
        <TextBox Grid.Row="1" Name="EmailTextBox"/>
        <TextBlock Grid.Row="2">Password</TextBlock>
        <PasswordBox Grid.Row="3" Name="PasswordTextBox" PasswordChar="*"/>

        <Button Grid.Row="4" Name="SignInButton" Margin="0,5,0,0" Click="SignInButton_OnClick">Sign in</Button>
    </Grid>
</Window>
