<Window x:Class="TeacherEduTest.SideMenu.AddNewModelsWindows.AddNewTopicWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TeacherEduTest.SideMenu.AddNewModelsWindows"
        mc:Ignorable="d"
       Title="New Topic " Height="135" MaxHeight="135" Width="350" MaxWidth="350">

    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0">Enter Topic Name</TextBlock>
        <TextBox Grid.Row="1" Name="ChapterNameTextBox"/>
        <Button Grid.Row="2" Name="OkButton" Margin="230,5,0,0" Click="ButtonOk_OnClick" >OK</Button>
    </Grid>
</Window>
