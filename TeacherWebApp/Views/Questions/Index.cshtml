@model EduTestContract.Models.Items<EduTestContract.Models.QuestionBaseModel>

@{
    ViewBag.Title = "Questions";
}

<body>

    <div class="col-md-12">
        @Html.ActionLink("Add new question", "AddQuestion", null, new { @class = "btn btn-success" })
        <br />
        <br />
        <!-- BEGIN SAMPLE TABLE PORTLET-->
        <div class="portlet light bordered">
            <div class="portlet-title">
                <div class="caption">
                    <i class="icon-social-dribbble font-green"></i>
                    <span class="caption-subject font-green bold uppercase">Questions</span>
                </div>
                <div class="actions">
                    <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                        <i class="icon-cloud-upload"></i>
                    </a>
                    <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                        <i class="icon-wrench"></i>
                    </a>
                    <a class="btn btn-circle btn-icon-only btn-default" href="javascript:;">
                        <i class="icon-trash"></i>
                    </a>
                </div>
            </div>
            <div class="portlet-body">
                <div class="table-scrollable">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th> #</th>
                                <th> Type </th>
                                <th> Topic </th>
                                <th> Created By </th>
                                <th> Enabled </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var question in Model.Data)
                            {
                                <tr>
                                    <td> @question.Id</td>
                                    <td> @question.Type</td>
                                    <td> @question.TopicId</td>
                                    <td> @question.UserId </td>
                                    <td> @question.Enabled </td>
                                    <td>
                                        <span class="label label-sm label-default"> Edit </span>
                                        <span class="label label-sm label-danger"> Delete </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                @Html.Partial("_Pagination", new ViewDataDictionary() { { "Page", Model.Page }, { "TotalPages", Model.TotalPages } })
            </div>
        </div>
        <!-- END SAMPLE TABLE PORTLET-->
    </div>
    <!-- END FOOTER -->

</body>